[init]
	templatedir = /var/git/templates
[user]
	name = paul
	email = pebreo@pauleb.com
[url "https://"]
	insteadOf = git://
[merge]
	tool = opendiff
[core]
	pager = less -+F -+X
	editor = vim
[alias]
  co = checkout
    ci = commit
      s = status
      l = log --oneline 
        br = branch
          hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
            type = cat-file -t
              dump = cat-file -p
